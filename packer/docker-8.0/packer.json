{
  "builders": [
    {
      "changes": [
        "ENV LANG en_US.UTF-8",
        "ENV LC_ALL en_US.UTF-8",
        "ENV SHELL /bin/bash",
        "ENV TZ UTC",
        "ENV BAMBOO_OWNER bamboo",
        "ENV BAMBOO_GROUP bamboo",
        "ENV BAMBOO_HOME /var/atlassian/application-data/bamboo",
        "ENV BAMBOO_CATALINA /opt/atlassian/bamboo",
        "ENV PATH $PATH:$BAMBOO_CATALINA/bin",
        "VOLUME $BAMBOO_HOME",
        "WORKDIR $BAMBOO_HOME",
        "EXPOSE 8007",
        "EXPOSE 8085",
        "ENTRYPOINT [\"catatonit\", \"-g\", \"--\", \"docker-entrypoint.sh\"]",
        "CMD [\"start-bamboo.sh\", \"-fg\"]"
      ],
      "commit": true,
      "image": "ubuntu:20.04",
      "type": "docker"
    }
  ],
  "post-processors": [
    {
      "inline": [
        "set -eu",
        "export _ID=$(docker images | awk '{ print $3 }' | awk 'NR==2')",
        "mkdir -p output-docker",
        "docker save $_ID | gzip -9 > output-docker/image.tar.gz"
      ],
      "type": "shell-local"
    }
  ],
  "provisioners": [
    {
      "inline": [
        "set -eu",
        "apt-get update",
        "DEBIAN_FRONTEND=noninteractive apt-get dist-upgrade -y",
        "DEBIAN_FRONTEND=noninteractive apt-get install -y ca-certificates curl gcc iproute2 language-pack-en locales python3 python3-dev sudo"
      ],
      "type": "shell"
    },
    {
      "galaxy_file": "./ansible-galaxy-requirements.yml",
      "inventory_directory": "./",
      "playbook_file": "./packer.yml",
      "type": "ansible",
      "user": "root"
    }
  ]
}

